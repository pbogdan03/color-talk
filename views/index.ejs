<!doctype html>
<html>
  <head>
    <title>Color Talk</title>
    <meta charset="UTF-8">

    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    <script src="/javascripts/angular-ui-router.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style>
      .glyphicon-thumbs-up { cursor: pointer;}
      .glyphicon-thumbs-down {cursor: pointer;}
    </style>
  </head>

  <body ng-app="colorTalk">
    <nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
      <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        
        <ui-view></ui-view>

      </div>
    </div>
    
    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
          <h1>Color Talk</h1>
        </div>


        <div ng-repeat="talk in talks | orderBy: '-upvotes'">

          <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(talk)"></span>
          <span class="glyphicon glyphicon-thumbs-down" ng-click="decrementUpvotes(talk)"></span>
          {{talk.upvotes}}

          <span style="font-size: 20px; margin-left: 10px;">
            <a ng-show="talk.link" ng-href="{{talk.link}}">
              {{talk.title}}
            </a>
            <span ng-hide="talk.link">
              {{talk.title}}
            </span>
            <span ng-show="talk.author">
              posted by <a>{{talk.author}}</a> |
            </span>
          </span>

          <span>
            {{commentsNumber(talk)}}
            <a href="#/talks/{{talk._id}}">Comment<span ng-hide="commentsNumber(talk) === 1">s</span></a>
          </span>
        </div>
        
        <div ng-hide="isLoggedIn()">
          <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a talk. </h3>
        </div>

        <button class="btn btn-primary" style="margin-top: 30px;" ng-click="activeForm = !activeForm">Add new talk</button>

        <div ng-hide="activeForm">
          <form ng-submit="addTalk()" ng-show="isLoggedIn()" style="margin-top: 30px;">
            <h3>Add a new talk</h3>

            <div class="form-group">
              <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
            </div>

            <button type="submit" class="btn btn-primary">Post</button>
          </form>
        </div>
    </script>

    <script type="text/ng-template" id="/talks.html">
      <div class="page-header">
        <h3>
          <a ng-show="talk.link" ng-href="{{talk.link}}">
            {{talk.title}}
          </a>
          <span ng-hide="talk.link">
            {{talk.title}}
          </span>
        </h3>
      </div>

      <div ng-repeat="comment in talk.comments | orderBy: '-upvotes'">
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span>
        <span class="glyphicon glyphicon-thumbs-down" ng-click="decrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px">
          {{comment.body}}
        </span>
      </div>

      <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment. </h3>
      </div>

      <button class="btn btn-primary" style="margin-top: 30px" ng-click="activeForm = !activeForm">Add new comment</button>

      <div ng-hide="activeForm">
        <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
          <h3>Add a new comment</h3>

          <div class="form-group">
            <input type="text" class="form-control" placeholder="Author" ng-model="author"></input>
          </div>

          <div class="form-group">
            <textarea class="form-control" placeholder="Comment" ng-model="body"></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Post</button>
        </form>
      </div>
    </script>

    <script type="text/ng-template" id="/register.html">
      <div class="page-header">
        <h1>Flapper News</h1>
      </div>

      <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="register()" style="margin-top:30px;">
        <h3>Register</h3>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
        </div>

        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
        </div>

        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </script>

    <script type="text/ng-template" id="/login.html">
      <div class="page-header">
        <h1>Flapper News</h1>
      </div>

      <div class="alert alert-danger row" ng-show="error">
        <span>{{ error.message }}</span>
      </div>

      <form ng-submit="logIn()" style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
          <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
        </div>

        <div class="form-group">
          <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
        </div>

        <button type="submit" class="btn btn-primary">Log In</button>
      </form>
    </script>

  </body>
</html>